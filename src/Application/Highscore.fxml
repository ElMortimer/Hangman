<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="Application.HighscoreController"
           styleClass="menu-background">

    <stylesheets>
        <URL value="@Style.css" />
    </stylesheets>

    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox fx:id="highScoresBox"
                      alignment="TOP_CENTER"
                      spacing="30"
                      style="-fx-padding: 50;">

                    <Label fx:id="titleLabel"
                           text=" HIGH SCORES "
                           styleClass="game-title"/>

                    <!-- Easy Scores -->
                    <VBox fx:id="easyScoresBox"
                          alignment="TOP_CENTER"
                          spacing="10"
                          style="-fx-background-color: rgba(0, 0, 0, 0.7);
                                 -fx-padding: 20;
                                 -fx-background-radius: 15;
                                 -fx-border-color: #490816;
                                 -fx-border-radius: 15;
                                 -fx-border-width: 3;">
                        <Label text="EASY" styleClass="difficulty-header"/>
                    </VBox>

                    <!-- Medium Scores -->
                    <VBox fx:id="mediumScoresBox"
                          alignment="TOP_CENTER"
                          spacing="10"
                          style="-fx-background-color: rgba(0, 0, 0, 0.7);
                                 -fx-padding: 20;
                                 -fx-background-radius: 15;
                                 -fx-border-color: #490816;
                                 -fx-border-radius: 15;
                                 -fx-border-width: 3;">
                        <Label text="MEDIUM" styleClass="difficulty-header"/>
                    </VBox>

                    <!-- Hard Scores -->
                    <VBox fx:id="hardScoresBox"
                          alignment="TOP_CENTER"
                          spacing="10"
                          style="-fx-background-color: rgba(0, 0, 0, 0.7);
                                 -fx-padding: 20;
                                 -fx-background-radius: 15;
                                 -fx-border-color: #490816;
                                 -fx-border-radius: 15;
                                 -fx-border-width: 3;">
                        <Label text="HARD" styleClass="difficulty-header"/>
                    </VBox>

                    <!-- Back Button -->
                    <Button fx:id="backButton"
                            text="BACK TO MENU"
                            styleClass="game-button"
                            maxWidth="300"/>

                </VBox>
            </content>
        </ScrollPane>
    </children>
</StackPane>