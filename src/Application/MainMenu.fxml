<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>


<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Application.MenuController"
            styleClass="menu-background">

    <stylesheets>
        <URL value="@Style.css" />
    </stylesheets>

    <children>
        <VBox fx:id="menuBox"
              alignment="CENTER"
              spacing="30"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">

            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <Label text="HANGMAN" fx:id="titleLabel" />
            <Button text="New Game" fx:id="newGameButton"
                    VBox.vgrow="ALWAYS" maxWidth="Infinity" />
            <Button text="High Scores" fx:id="highScoresButton"
                    VBox.vgrow="ALWAYS" maxWidth="Infinity" />
            <Button text="Quit" fx:id="quitButton"
                    VBox.vgrow="ALWAYS" maxWidth="Infinity" />

        </VBox>
    </children>
</AnchorPane>

